{
  "name": "fs-utils",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build:server": "esbuild src/index.ts --bundle --format=esm --minify --platform=node --packages=external --outfile=dist/index.js",
    "build:server:watch": "esbuild src/index.ts --bundle --format=esm --minify --platform=node --packages=external --outfile=dist/index.js --watch",
    "build:client": "esbuild src/scripts/*.ts --bundle --minify --platform=browser --outdir=dist/scripts/",
    "build:client:watch": "esbuild src/scripts/*.ts --bundle --minify --platform=browser --outdir=dist/scripts/ --watch",
    "build": "npm run build:server && npm run build:client",
    "build:watch": "concurrently \"npm run build:server:watch\" \"npm run build:client:watch\" --names \"SERVER,CLIENT\" --prefix \"[{name}]\"",
    "assets:fonts": "copyfiles -f node_modules/bootstrap-icons/font/fonts/* dist/css/fonts/",
    "assets": "npm run assets:fonts",
    "styles": "sass --style=compressed src/styles/main.scss dist/css/main.css && purgecss --css dist/css/main.css --content src/views/**/* --output dist/css/main.min.css",
    "styles:watch": "nodemon --watch src --exec \"npm run styles\"",
    "start": "node dist/index.js",
    "start:watch": "nodemon dist/index.js --ignore data/",
    "dev": "npm run assets && concurrently \"npm run build:watch\" \"npm run styles:watch\" \"npm run start:watch\" --names \"BUILD,SASS,SERVER\" --prefix \"{time} [{name}]\"",
    "prod": "npm run assets && npm run build && npm run styles && npm run start",
    "prettier": "prettier --check .",
    "lint": "eslint . --ext .ts"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bootstrap": "^5.3.2",
    "bootstrap-icons": "^1.11.3",
    "chokidar": "^3.6.0",
    "copy-file": "^11.0.0",
    "express": "^4.18.2",
    "express-handlebars": "^7.1.2",
    "glob-parent": "^6.0.2",
    "handlebars": "^4.7.8",
    "multer": "^1.4.5-lts.1",
    "purgecss": "^5.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/glob-parent": "^5.1.3",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.20.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.0",
    "eslint-config-xo": "^0.43.1",
    "eslint-config-xo-typescript": "^1.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.4",
    "sass": "^1.70.0",
    "typescript": "^5.7.2"
  }
}
